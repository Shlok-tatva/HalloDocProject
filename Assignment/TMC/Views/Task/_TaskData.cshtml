@model List<TMC_DAL.Models.Task>;

<table id="taskdata" class="table table-hover w-100 my-4 mobile_d_none">
    <thead class="">
        <tr>
            <th>Task Id</th>
            <th>Name</th>
            <th>Assignee</th>
            <th>Description</th>
            <th>Due Date</th>
            <th>Category</th>
            <th>City</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td class="text-center">@task.Id</td>
                <td>@task.Taskname</td>
                <td>@task.Assignee</td>
                <td class="w-25 fs-6">@task.Discription</td>
                <td>@task.Duedate.ToString("MMM dd , yyyy")</td>
                <td>@task.Category</td>
                <td>@task.City</td>
                <td>
                    <div data-task-id="@task.Id" data-modal-id="edittask" class="btn btn-success bg-opacity-75 fw-bold open-modal" >Edit</div>
                    <div data-taskid="@task.Id" class="btn btn-danger bg-opacity-75 fw-bold delete-Task ">Delete</div>
                </td>
            </tr>

        }
    </tbody>
</table>



