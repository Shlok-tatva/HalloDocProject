
@{
}
@model HalloDoc_DAL.Models.Aspnetuser;

@{
    ViewData["Title"] = "Physician Login Page";
}

@section style{

    <style>
        body {
            height: 100vh;
        }

        .hero_Image img {
            height: inherit;
        }

        input:focus + .control-label {
            color: #01bbe9;
        }

        .theame_toggle_button {
            position: fixed !important;
            right: 15px;
            top: 15px;
        }

        @@media (max-width: 760px) {

            .hero_Image {
                display: none;
            }

            body {
                background-image: url("../images/hero_img.jpg");
                background-size: contain;
                background-position:center;
                background-repeat: no-repeat;

            }

            .login_content {
                width: 100% !important;
                padding: 0px;
                background-position: center;
                box-shadow: 0 0 5px 0;
                background: inherit;
                backdrop-filter: blur(20px);
            }
        }
    </style>
}

@section Scripts{

    @if (@TempData["Error"] != null)
    {
        <script>
            showToaster("@TempData["Error"]", "error");
        </script>
    }
}


<div class="container-fluid h-100 p-0">
    <div class="row g-0 h-100 align-items-center">
        <div class="col-md-6 h-100 hero_Image">
            <img src="../images/hero_img.jpg" class="w-100 h-100" />
        </div>
        <div class="col-md-6 h-100 login_content">
            <div class="row g-0 d-flex flex-column align-items-center  justify-content-between h-100">
                <div class="mt-5 text-center ">
                    <!-- <h1 class="text-info">HalloDoc</h1> -->
                    <img src="../images/logo.png" width="250px" alt="" srcset="">
                </div>
                <form asp-action="PhysicianLogin" class="p-md-2 mb-4 w-auto">
                    <h1 class="text-center pb-3">Login To Your Account</h1>
                    <div class="form-floating mb-3">
                        <input asp-for="Email" type="email" class="form-control " id="floatingInput" placeholder=" ">
                        <label for="floatingInput" class="control-label">Username</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Passwordhash" type="password" class="form-control" id="floatingPassword" placeholder="Password">
                        <label for="floatingPassword" class="control-label">Password</label>
                    </div>
                    <button class="w-100 btn btn-lg btn-info text-white my-2" type="submit">Log In</button>
                    <a href="/login/ForgetPassword" class="w-100 btn btn-lg text-info" type="submit">
                        Forget Password
                        ?
                    </a>
                </form>
                <div class="text-center">
                    <p>
                        <a href="" class="text-decoration-none text-secondary">Terms of Conditions</a>
                        <span class="text-secondary">|</span>
                        <a href="" class="text-decoration-none text-secondary">Privacy Policy</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>