@model List<HalloDoc_BAL.ViewModel.Records.BlockHistoryView>;

@section Style {
    <link rel="stylesheet" href="~/css/adminCss.css" />
    <style>
        tr, th, td {
            text-align: left !important;
        }

        th {
            padding-left: 15px !important
        }

        td {
            padding: 15px !important;
        }
    </style>
}

@section Scripts {
    <script src="~/js/Records/BlockHistroy.js"></script>
    <script>
        if (window.innerWidth > 530) {
            document.getElementById('navbarHeader').classList.add("show");
        }
    </script>

}

<partial name="_NavBar" />

<div class="m-4 mt-5">
    <div class="p-2">
        <div class="d-flex justify-content-between">
            <h3 class="fw-bold">Block History</h3>
            <button onclick="history.back()" class="btn btn-lg btn-outline-info hover_white ms-5">
                <i class="fa-solid fa-chevron-left"></i> Back
            </button>
        </div>
    </div>
    <div class="shadow rounded-3 mt-3">

        <form id="BloclpatientSearch" class="row px-4">
            <div class="form-floating col-md-3 my-3">
                <input type="text" name="name" class="form-control" placeholder=" ">
                <label for="floatingInput" class="control-label ms-3">
                    Name
                </label>
            </div>

            <div class="form-floating col-md-3 my-3">
                <input type="date" name="date" class="form-control" placeholder=" ">
                <label for="floatingInput" class="control-label ms-3">
                    Date
                </label>
            </div>

            <div class="form-floating col-md-3 my-3">
                <input type="text" name="email" class="form-control" placeholder=" ">
                <label for="floatingInput" class="control-label ms-3">
                    Email
                </label>
            </div>

            <div class="form-floating col-md-3 my-3">
                <input type="text" name="phoneNumber" class="form-control" placeholder=" ">
                <label for="floatingInput" class="control-label ms-3">
                    Phone Number
                </label>
            </div>

            <div class="col-12 text-end mb-2">
                <button class="btn btn-outline-info hover_white" > Clear </button>
                <input type="submit" value="Search" class="btn btn-info text-white" />
            </div>
        </form>
       <div id="blockUserData">
            <partial name="~/Views/Admin/Records/_blockUserData.cshtml" , model="Model" />
       </div>
    </div>
    <div id="pagination" class="d-flex flex-row-reverse p-3">
        <div class="d-flex">
            <button id="first-button" class="pagination_btn">First</button>
            <button id="prev-button" class="pagination_btn" disabled><i class="fa-solid fa-arrow-left"></i></button>
            <div id="page-buttons"></div>
            <button id="next-button" class="pagination_btn"><i class="fa-solid fa-arrow-right"></i></button>
            <button id="last-button" class="pagination_btn">Last</button>
        </div>
    </div>
</div>
