@model List<HalloDoc_DAL.Models.User>;

@section Style {
    <link rel="stylesheet" href="~/css/adminCss.css" />
    <style>
         tr ,th ,td{
                    text-align: left !important;
                }
                th{
                    padding-left:15px !important
                }
                td{
                padding: 15px !important;
                }
    </style>
}

@section Scripts {
    <script>
        if (window.innerWidth > 530) {
            document.getElementById('navbarHeader').classList.add("show");
        }
    </script>
}

<partial name="_NavBar" />

<div class="m-4 mt-5">
    <div class="p-2">
        <div class="d-flex justify-content-between">
            <h3 class="fw-bold">Patient History</h3>
            <button onclick="history.back()" class="btn btn-lg btn-outline-info hover_white ms-5">
                <i class="fa-solid fa-chevron-left"></i> Back
            </button>
        </div>
    </div>
    <div class="shadow rounded-3 mt-3">

        <form class="row px-4">
            <div class="form-floating col-md-3 my-3">
                <input type="text" id="FirstName" class="form-control" placeholder=" ">
                <label for="floatingInput" class="control-label ms-3">
                    First Name
                </label>
            </div>

            <div class="form-floating col-md-3 my-3">
                <input type="text" id="LastName" class="form-control" placeholder=" ">
                <label for="floatingInput" class="control-label ms-3">
                    Last Name
                </label>
            </div>

            <div class="form-floating col-md-3 my-3">
                <input type="Email" id="Email" class="form-control" placeholder=" ">
                <label for="floatingInput" class="control-label ms-3">
                    Email
                </label>
            </div>

            <div class="form-floating col-md-3 my-3">
                <input type="text" id="phoneNumber" class="form-control" placeholder=" ">
                <label for="floatingInput" class="control-label ms-3">
                    Phone Number
                </label>
            </div>

            <div class="col-12 text-end mb-2">
                <input type="reset" value="Clear" class="btn btn-outline-info hover_white" />
                <input type="submit" value="Search" class="btn btn-info text-white" />
            </div>
        </form>
        <table class="table table-hover w-100 my-4">
            <thead class="">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Address</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var user in Model)
                {
                    <tr class="text-black">
                        <td class="text-black">@user.Firstname</td>
                        <td class="text-black">@user.Lastname</td>
                        <td class="text-black">@user.Email</td>
                        <td class="text-black">@user.Mobile</td>
                        <td class="text-black">@user.Street @user.City , @user.State (@user.Zipcode)</td>
                        <td>
                            <a href="PatientRequestes?id=@user.Userid" class="btn btn-outline-info btn-sm hover_white">Explore</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
