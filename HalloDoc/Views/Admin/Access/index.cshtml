@{
    ViewData["Title"] = "Account Access";
}
@model List<HalloDoc_DAL.Models.Role>;

@section Style {
    <link rel="stylesheet" href="~/css/adminCss.css" />
}
@section Scripts {
    <script src="~/js/Access/CreateEditAccess.js"></script>
    <script>
        if (window.innerWidth > 530) {
            document.getElementById('navbarHeader').classList.add("show");
        }
    </script>


}

<partial name="_NavBar" />

<div class="my-5 container m-auto">
    <div class="mt-4 m-auto form_content">
        <div class="d-flex justify-content-between">
            <h3 class="fw-bold">Account Access</h3>
            <button onclick="history.back()" class="btn btn btn-outline-info hover_white ms-5">
                <i class="fa-solid fa-chevron-left"></i> Back
            </button>
        </div>


        <div class="rounded-3 shadow my-4">
            <div class="row p-3 ">
                <div class="col-md-12 my-auto text-end">
                    <a href="/Admin/CreateAccess" class="btn btn-outline-info hover_white">Create Access</a>
                </div>
            </div>

            <div>
                <table class="w-100 table table-hover mobile_d_none">
                    <thead>
                        <tr>
                            <th class="text-start ps-5 w-25">Name</th>
                            <th class="text-center ps-5 w-10">Account Type</th>
                            <th class="text-end pe-5 w-25">Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var role in Model)
                        {
                            <tr class="text-start">
                                <td class="ps-5">@role.Name</td>
                                <td class="text-center">@ViewBag.AccountTypeNames[(int)role.Accounttype]</td>
                                <td class="text-end pe-4">
                                    <a href="/Admin/EditAccess/?roleId=@role.Roleid" class="btn btn-sm hover_white btn-outline-info">Edit</a>

                                    <button data-roleid="@role.Roleid" data-rolename="@role.Name" class="btn btn-sm hover_white btn-outline-info open-modal">
                                        Delete
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>


                <div class="desktop_d_none">
                    @foreach (var role in Model)
                    {
                        <div class="border-bottom p-3">
                            <div class="my-1">Name:- @role.Name</div>
                            <div class="my-2">Account Type:- @ViewBag.AccountTypeNames[(int)role.Accounttype]</div>
                            <div class="my-2">
                                <a href="/Admin/EditAccess/?roleId=@role.Roleid" class="btn btn hover_white btn-outline-info">Edit</a>
                                <button data-roleid="@role.Roleid" data-rolename="@role.Name" class="btn btn hover_white btn-outline-info open-modal">
                                    Delete
                                </button>
                            </div>
                        </div>
                    }
                </div>


            </div>
        </div>
    </div>
</div>
