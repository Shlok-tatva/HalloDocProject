<div class="border-0 rounded-3 shadow my-4">
    <div class="row p-3 p-2">
        <div class="col-md-12 my-auto">
            <h4 class="fw-500 p-2">Details</h4>
        </div>

        <div class="form-floating col-md-6 my-3">
            <input id="roleName" type="text" class="form-control" placeholder=" ">
            <label for="floatingInput" class="control-label ms-3">
                Role Name
            </label>
        </div>
        <div class="form-floating col-md-6 my-3">
            <select asp class="form-select pt-1" id="AccountType" aria-label="Default select example">
                <option disabled selected>Account Type</option>
                @foreach (var role in @ViewBag.roles)
                {
                    <option value="@role.Id">@role.Name</option>
                }
            </select>
        </div>

        <div class="d-flex flex-wrap align-items-center menu-container">
            <div class="d-flex justify-content-center w-100 mt-3">
                <p class="alert alert-info"> Pelase Selecte at lease one accout type</p>
            </div>
        </div>
        <div class="col-12 text-end mt-5 mb-3">
            <button id="createRole" class="btn btn-info text-white btn-lg">Save</button>
            <button class="btn btn-outline-info hover_white btn-lg">Cancel</button>
        </div>
    </div>
</div>