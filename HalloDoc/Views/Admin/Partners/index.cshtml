@{
    ViewData["Title"] = "Partners";
}


@model List<HalloDoc_DAL.Models.Healthprofessional>;

@section Style {
    <link rel="stylesheet" href="~/css/adminCss.css" />
}
@section Scripts {
    <script src="~/js/Partners.js"></script>
    <script>
        if (window.innerWidth > 530) {
            document.getElementById('navbarHeader').classList.add("show");
        }
    </script>
    @if (@TempData["Success"] != null)
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                Swal.fire({
                    title: "@TempData["Success"]",
                    icon: "success",
                    showCancelButton: false,
                    showConfirmButton: false,
                    timer: 1500
                })
            });
        </script>
    }
}

<partial name="_NavBar" />

<div class="mt-5  m-auto mb-5 container-fluid px-5">
    <div class="mt-4 m-auto d-flex justify-content-between">
        <div class="d-flex align-items-center justify-content-center">
            <h3 class="me-2 mt-1 fw-bolder">Vendor(s)</h3>
        </div>
        <div>
            <button class="btn btn-lg btn-outline-info hover_white ms-5" onclick="window.history.back()">
                <i class="fa-solid fa-chevron-left"></i> Back
            </button>
        </div>
    </div>

    <div class="border-0 rounded-3 shadow my-4">
        <div class="row px-4">

            <div class="col-md-2 has-search d-flex align-items-center">
                <span class="fa fa-search form-control-feedback"></span>
                <input id="patientsearch" type="text" class="form-control" placeholder="Search Vendors">
            </div>
            <div class="col-md-2">
                <select class="p-2 mt-3 px-4 form-control mb-3 w-100 " id="professionSelect">
                    <option value="0">All Profession</option>
                    @foreach (var profession in @ViewBag.professionType)
                    {
                        <option value="@profession.Healthprofessionalid"> @profession.Professionname</option>
                    }
                </select>
            </div>

            <div class="col-md-8 my-auto text-end">
                <a href="/admin/AddPartner" class="btn btn-outline-info hover_white mx-2">
                    <strong><i class="fa-solid fa-plus"></i> </strong> <span class="mobile_d_none">Add Business</span>
                </a>

            </div>
        </div>

        <div id="vendorTable">
            <partial name="~/Views/Admin/Partners/_partnersData.cshtml" model="Model" />        
        </div>

    </div>
    <div id="pagination" class="d-flex flex-row-reverse p-3">
        <div class="d-flex">
            <button id="first-button" class="pagination_btn">First</button>
            <button id="prev-button" class="pagination_btn" disabled><i class="fa-solid fa-arrow-left"></i></button>
            <div id="page-buttons"></div>
            <button id="next-button" class="pagination_btn"><i class="fa-solid fa-arrow-right"></i></button>
            <button id="last-button" class="pagination_btn">Last</button>
        </div>
    </div>
</div>
