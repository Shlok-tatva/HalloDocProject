@model PatientFormData;

<!-- Patient Information -->

<h5 class="col-12 fw-bold my-3">Patient Information</h5>

<div class="form-floating my-3">
    <textarea asp-for="@Model.Symptoms" class="form-control" placeholder="" id="floatingTextarea2" style="height: 100px"></textarea>
    <label asp-for="@Model.Symptoms" for="floatingTextarea2" class="ms-3">Enter Brief Details Of Symptoms</label>
    <span asp-validation-for="Symptoms" class="text-danger"></span>
</div>
<div class="form-floating col-md-6 my-3">
    <input asp-for="@Model.FirstName" type="text" class="form-control" placeholder="name@example.com">
    <label asp-for="@Model.FirstName" for="floatingInput" class="control-label ms-3">
        First Name
    </label>
    <span asp-validation-for="FirstName" class="text-danger"></span>

</div>
<div class="form-floating col-md-6 my-3">
    <input asp-for="@Model.LastName" type="text" class="form-control" placeholder="name@example.com">
    <label asp-for="@Model.LastName" for="floatingInput" class="control-label ms-3">
        Last Name
    </label>
    <span asp-validation-for="LastName" class="text-danger"></span>

</div>
<div class="form-floating col-md-6 my-3">
    <input asp-for="@Model.DateOfBirth" type="date" class="form-control" id="dob">
    <label asp-for="@Model.DateOfBirth" for="dob" class="control-label ms-3">
        Date Of Birth
    </label>
    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
</div>
<input asp-for="@Model.Password" type="password" class="form-control" value="123456" hidden>
<!-- Patient Contact Information -->
<h5 class="col-12 fw-bold my-3">Patient Contact Information</h5>
<div class="form-floating col-md-6 my-3">
    <input asp-for="@Model.Email" type="email" id="email" class="form-control" placeholder="name@example.com">
    <label asp-for="@Model.Email" for="floatingInput" class="control-label ms-3">
        Email
    </label> 
    <span asp-validation-for="Email" class="text-danger"></span>
</div>
<div class="form-floating col-md-6 my-3">
    <input asp-for="@Model.PhoneNumber" id="phone" type="tel" class="form-control"> <br />
    <label for="floatingInput" class="control-label ms-3">
    </label>
    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
</div>

<div class="form-floating col-md-6 my-3 password-fields">
    <input asp-for="@Model.Password" type="password"  class="form-control" placeholder="name@example.com" required>
    <label asp-for="@Model.Password" for="floatingInput" class="control-label ms-3">
        Password
    </label>
    <span asp-validation-for="Password" class="text-danger"></span>
</div>

<div id="" class="form-floating col-md my-3 password-fields">
    <input asp-for="@Model.ConfirmPassword" type="password" class="form-control" placeholder="name@example.com" required>
    <label asp-for="@Model.ConfirmPassword" for="floatingInput" class="control-label ms-3">
        Confirm Password
    </label>
    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
</div>




<!-- Patient Location -->
<h5 class="col-12 fw-bold my-3">Patient Location</h5>

@if (!String.Equals(ViewData["ViewName"], "ConciergeRequest"))
{
    <div class="form-floating col-md-6 my-3">
        <input asp-for="@Model.Street" type="text" class="form-control" placeholder="name@example.com">
        <label asp-for="@Model.Street" for="floatingInput" class="control-label ms-3">
            Street
        </label>
        <span asp-validation-for="Street" class="text-danger"></span>

    </div>


    <div class="form-floating col-md-6 my-3">
        <input asp-for="@Model.City" type="text" class="form-control" placeholder="name@example.com">
        <label asp-for="@Model.City" for="floatingInput" class="control-label ms-3">
            City
        </label>
        <span asp-validation-for="City" class="text-danger"></span>

    </div>
    <div class="form-floating col-md-6 my-3">
        <input asp-for="@Model.State" type="text" class="form-control" placeholder="name@example.com">
        <label asp-for="@Model.State" for="floatingInput" class="control-label ms-3">
            State
        </label>
        <span asp-validation-for="State" class="text-danger"></span>

    </div>
    <div class="form-floating col-md-6 my-3">
        <input asp-for="@Model.ZipCode" type="text" class="form-control" placeholder="name@example.com">
        <label asp-for="@Model.ZipCode" for="floatingInput" class="control-label ms-3">
            Zip Code
        </label>
        <span asp-validation-for="ZipCode" class="text-danger"></span>

    </div>
}

<div class="form-floating col-md-6 my-3">
    <input asp-for="@Model.RoomOrSuite" type="text" class="form-control">
    <label asp-for="@Model.RoomOrSuite" for="floatingInput" class="control-label ms-3">
        Room # / Suite (optional)
    </label>
</div>

@if (!String.Equals(ViewData["ViewName"] , "ConciergeRequest") && !String.Equals(ViewData["ViewName"] , "BusinessRequest"))
{

    <h5 class="col-12 fw-bold my-3">(Optinal) Upload Photo or Document</h5>
    <div class="my-3">
        <input type="file" class="visually-hidden" id="inputFile">
        <input type="hidden" asp-for="@Model.FileName" id="fileNameInput">
        <label asp-for="@Model.FileName" for="inputFile" class="border border-1 rounded-2 d-flex justify-content-between">
            <div class="d-flex align-items-center ms-3 mt-2">
                <p>Select File</p>
            </div>
            <div class="p-2 bg-info rounded-2 text-white d-flex align-items-center ">
                <i class="bi bi-cloud-arrow-up mx-2"></i> <span>Upload</span>
            </div>
        </label>
    </div>
}
<div class="my-3 d-flex justify-content-end ">
    <input class="btn btn-info btn-lg text-white mx-2" type="submit"></input>
    <input class="btn btn-outline-info btn-lg" type="reset"></input>
</div>

